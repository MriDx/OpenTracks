<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/ic_button_pause" />
    <item>
        <selector android:enterFadeDuration="@integer/buttonDelayMillis">
            <item
                android:drawable="@drawable/ic_button_pause"
                android:state_enabled="true"
                android:state_pressed="false" />
            <item
                android:drawable="@drawable/ic_button_press_overlay"
                android:state_enabled="true"
                android:state_pressed="true" />
        </selector>
    </item>
</layer-list>